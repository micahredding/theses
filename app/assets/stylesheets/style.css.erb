@import url('https://fonts.googleapis.com/css?family=Fira+Sans|Libre+Baskerville:400,400i&subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese');

html {
	font-family: "Fira Sans";
	font-weight: 400;
}
h1,h2,h3 {
	font-family: "Libre Baskerville";
}

#main {width: 100%; padding:0;}

/* Typography */
/**************************/
h1 {font-size:1.75rem; font-weight:400; color:black; padding:0; margin:0;}
h2 {font-size:4.5rem; font-style: italic; letter-spacing:5px; text-align:center; color:white; font-weight:400; z-index:10; opacity:1; text-shadow: 1px 1px #000}
h3 {font-size:1.125rem; line-height:0; font-weight:400; letter-spacing:8px; color:black;}
p {font-size:1.125rem; line-height:1.5;}

p:first-of-type:first-letter {
	font-family: "Libre Baskerville";
	color: #c48660;
	-webkit-initial-letter: 3;
	initial-letter: 3;
	margin-right: .5rem;
}

/* Section - Title */
/**************************/
.title {background: white; padding: 60px; margin:0 auto; text-align:center;}
.title h1 {font-size:35px; letter-spacing:8px;}

/* Section - Block */
/**************************/
.block {background: white; padding: 60px; width:820px; margin:0 auto;}
.section-overlay-mask {position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: black; opacity: 0.70;}

/* Section - Parallax */
/**************************/
.parallax-one {padding-top: 200px; padding-bottom: 200px; overflow: hidden; position: relative; width: 100%; background-image: url('<%= asset_path('basilica.jpg') %>'); background-attachment: fixed; background-size: cover; -moz-background-size: cover; -webkit-background-size: cover; background-repeat: no-repeat; background-position: center center;}
.parallax-two {padding-top: 200px; padding-bottom: 200px; overflow: hidden; position: relative; width: 100%; background-image: url('<%= asset_path('renewal.jpg') %>'); background-attachment: fixed; background-size: cover; -moz-background-size: cover; -webkit-background-size: cover; background-repeat: no-repeat; background-position: center center;}
.parallax-three {padding-top: 200px; padding-bottom: 200px; overflow: hidden; position: relative; width: 100%; background-image: url('<%= asset_path('red-doors.jpg') %>'); background-attachment: fixed; background-size: cover; -moz-background-size: cover; -webkit-background-size: cover; background-repeat: no-repeat; background-position: center center;}

/* Extras */
/**************************/
.line-break {border-bottom:1px solid black; width: 150px; margin:0 auto;}

/* Media Queries */
/**************************/
@media screen and (max-width: 959px) and (min-width: 768px) {
	.block {padding: 40px; width:620px;}
}
@media screen and (max-width: 767px) {
  .block {padding: 30px; width:420px;}
  h2 {font-size:30px;}
  .block {padding: 30px;}
  .parallax-one, .parallax-two, .parallax-three {padding-top:100px; padding-bottom:100px;}
}
@media screen and (max-width: 479px) {
  .block {padding: 30px 15px; width:290px;}
}


body.door {
	background-image: url('<%= asset_path('bg-door.jpg') %>');
	background-size: auto;
	padding: 1rem;
	padding-top: 4rem;
}
body.door h1 {
	font-style: italic;
	font-size: 5rem;
	color: whitesmoke;
	text-align: center;
	margin-bottom: 4rem;
	text-shadow: -2px 2px 5px #000;
}
body.door > article {
	border-radius: 3px;
	box-shadow: -5px 5px 10px 2px #000;
	background-color: whitesmoke;
	padding: 3rem;
	padding-top: 4.5rem;
	background-image: url('<%= asset_path('nail.png') %>');
	background-position: top center;
	background-size: auto;
	background-repeat: no-repeat;
	max-width: 650px;
	margin-left: auto;
	margin-right: auto;
	margin-bottom: 3rem;
}
body.door > article .author {
	text-align: right;
}
p + p {
	margin-top: 1rem;
}
input, textarea {
	vertical-align: baseline;
	border: 0;
	border-radius: 3px;
	padding: .25rem;
	padding-left: 0;
	width: 100%;
}
input[type="submit"] {
	width: 100%;
	border: 0;
	background-color: #04dd76;
	padding: 1rem;
}
label {
	display: block;
	margin-bottom: .25rem;
}
div.field {
	margin-bottom: 1rem;
}